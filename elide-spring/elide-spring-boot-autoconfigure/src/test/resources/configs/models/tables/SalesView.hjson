{
  tables:
  [
    {
      name: OrderDetails
      table: OrderDetails
      dbConnectionName: SalesDBConnection
      cardinality: large
      joins:
      [
        {
          name: customerDetails
          to: CustomerDetails
          type: toOne
          definition: %join.id = %from.customerId
        }
      ]
      measures:
      [
        {
          name: orderTotal
          type: DECIMAL
          definition: SUM(orderTotal)
        }
      ]
      dimensions:
      [
        {
          name: orderId
          type: TEXT
          definition: orderId
        }
        {
          name: customerRegion
          type: TEXT
          definition: "{{customerDetails.region}}"
        }
        {
          name: orderDate
          type: TIME
          definition: createdOn
          grain:
          {
            type: SIMPLEDATE
            sql: PARSEDATETIME(FORMATDATETIME({{}}, 'yyyy-MM-dd'), 'yyyy-MM-dd')
          }
        }
        {
          name: orderMonth
          type: TIME
          definition: createdOn
          grain:
          {
            type: YEARMONTH
            sql: PARSEDATETIME(FORMATDATETIME({{}}, 'yyyy-MM-01'), 'yyyy-MM-dd')
          }
        }
      ]
    }
    {
      name: CustomerDetails
      table: CustomerDetails
      dbConnectionName: SalesDBConnection
      cardinality: small
      dimensions:
      [
        {
          name: region
          type: TEXT
          definition: region
        }
      ]
    }
  ]
}
